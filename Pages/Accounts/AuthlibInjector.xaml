<Page x:Class="FSL.Pages.Accounts.AuthlibInjector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSL.Pages.Accounts"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d" 
      d:DesignHeight="227" d:DesignWidth="327"
      Title="AuthlibInjector" Initialized="Page_Initialized">

    <Grid>
        <TextBox x:Name="url" Height="60" Margin="0,19,0,0" TextWrapping="Wrap" Text="https://skins.test.example/api/yggdrasil" VerticalAlignment="Top" Style="{StaticResource TextBoxExtend}" hc:InfoElement.Title="验证服务器" HorizontalAlignment="Center" Width="263" TextChanged="url_TextChanged"/>
        <TextBox x:Name="email" Height="60" TextWrapping="Wrap" Text="email@example.com" VerticalAlignment="Center" Style="{StaticResource TextBoxExtend}" hc:InfoElement.Title="注册电子邮件" HorizontalAlignment="Center" Width="263" Margin="0,10,0,0" TextChanged="email_TextChanged"/>
        <hc:PasswordBox x:Name="password" Password="" Height="60" VerticalAlignment="Top" hc:TitleElement.Title="密码" HorizontalAlignment="Center" Width="263" Margin="0,158,0,0" KeyDown="password_Changed"/>
    </Grid>
</Page>
